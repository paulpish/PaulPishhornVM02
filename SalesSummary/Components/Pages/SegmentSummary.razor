@using global::SalesSummary.Models


<div class="card bg-warning text-dark mb-3">
    <div class="card-header">
        Segment Summary
    </div>
    <div class="card-body">
        <h5 class="card-title">Total Segment Types: @SegmentCount</h5>
        <p class="card-text">Unique Segment Types: @(UniqueSegments != null ? string.Join(", ", UniqueSegments) : "N/A")</p>
        <p class="card-text">Total Units Sold by Segment: @TotalUnitsSold</p>
    </div>
</div>