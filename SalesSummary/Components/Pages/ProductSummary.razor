@using global::SalesSummary.Models

<div class="card bg-warning text-dark mb-3">
    <div class="card-header">
        Product Summary
    </div>
    <div class="card-body">
        <h5 class="card-title">Total Product Types: @ProductCount</h5>
        <p class="card-text">Unique Product Types: @(UniqueProducts != null ? string.Join(", ", UniqueProducts) : "N/A")</p>
        <p class="card-text">Total Units Sold by Product: @TotalUnitsSold</p>
    </div>
</div>


