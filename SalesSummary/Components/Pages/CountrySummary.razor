@using global::SalesSummary.Models

<div class="card bg-warning text-dark mb-3">
    <div class="card-header">
        Country Summary
    </div>
    <div class="card-body">
        <h5 class="card-title">Total Country Types: @CountryCount</h5>
        <p class="card-text">Unique Country Types: @(UniqueCountries != null ? string.Join(", ", UniqueCountries) : "N/A")</p>
        <p class="card-text">Total Units Sold by Country: @TotalUnitsSold</p>
    </div>
</div>
